import { Card } from "./ui/card";
import { Button } from "./ui/button";

export function ThemePreview({ 
  theme, 
  name, 
  isActive, 
  onSelect, 
  className = "" 
}) {
  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      exit={{ opacity: 0, y: -20 }}
      transition={{ duration: 0.3 }}
      className={className}
    >
      <Card
        className={`p-4 cursor-pointer transition-all hover:scale-105 ${
          isActive ? 'ring-2 ring-primary' : ''
        }`}
        onClick={() => onSelect(theme.id)}
      >
        <div className="space-y-4">
          <h3 className="font-semibold text-lg">{theme?.name || name}</h3>
          
          {/* Color Swatches */}
          <div className="grid grid-cols-5 gap-2">
            {theme?.colors && Object.entries(theme.colors).map(([key, color]) => (
              <div
                key={`${name}-color-${key}`}
                className="w-6 h-6 rounded-full"
                style={{ backgroundColor: color }}
                title={key}
              />
            ))}
          </div>

          {/* Font Preview */}
          <div className="space-y-2">
            <p
              className="text-sm truncate"
              style={{ fontFamily: theme?.fonts?.heading }}
            >
              Heading Font
            </p>
            <p
              className="text-xs truncate opacity-80"
              style={{ fontFamily: theme?.fonts?.body }}
            >
              Body Font Sample
            </p>
          </div>

          {/* Gradient Preview */}
          <div className="grid grid-cols-3 gap-2">
            {theme?.gradients && Object.entries(theme.gradients).map(([key, gradient]) => (
              <div
                key={`${name}-gradient-${key}`}
                className="h-2 rounded"
                style={{ background: gradient }}
                title={key}
              />
            ))}
          </div>

          <Button
            variant={isActive ? "default" : "outline"}
            size="sm"
            className="w-full"
            onClick={() => onSelect(name)}
          >
            {isActive ? "Active" : "Select"}
          </Button>
        </div>
      </Card>
    </motion.div>
  );
}
